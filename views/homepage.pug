doctype html
html
  head
    meta(charset="utf-8")
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    .container
      h1 CUSTOM OBJECTS
      p

      if records && records.length
        table
          thead
            tr
              each prop in properties
                th= prop
          tbody
            each r in records
              tr
                each prop in properties
                  td= (r.properties && r.properties[prop]) ? r.properties[prop] : ''
      else
        p No records yet.

      hr
      .buttons
        a.button(href="/update-cobj") Update Record
        a.button(href="/create-cobj") Add Record
