doctype html
html
  head
    meta(charset="utf-8")
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 CUSTOM OBJECTS

    // ✅ Show records in a table
    if records && records.length
      .form-wrapper
        table
          thead
            tr
              each prop in properties
                th= prop
          tbody
            each r in records
              tr
                each prop in properties
                  td= (r.properties && r.properties[prop]) ? r.properties[prop] : ''
    else
      .form-wrapper
        p No records yet.

    hr

    // ✅ Action links
    .form-wrapper
      a.button(href="/update-cobj") Update Record
      a.button(href="/create-cobj") Add Record
